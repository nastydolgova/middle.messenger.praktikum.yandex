{{!< desktop}}

    <a href="./index.hbs" class="profile__link--back">
        <p class="profile__arrow-back">
            <svg width="13" height="12" viewBox="0 0 13 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="13" y="6.80005" width="11" height="1.6" transform="rotate(-180 13 6.80005)" fill="white"/>
                <path d="M6 11L2 6L6 1" stroke="white" stroke-width="1.6"/>
            </svg>
        </p>
    </a>
<section class="profile">
    <button class="profile__change-avatar">
        <span>Поменять аватар</span>
        <img class="profile__img" src="#" width="130" height="130">
    </button>
    <form action="/login" method="post"></form>
        {{> 'form/form'}} 
        {{#if save}}
        <input class="login__btn" type="submit" name="submit" value="Сохранить">
        {{/if}}
    </form>
    <a class="profile__link">Изменить данные</a>
    <a class="profile__link">Изменить пароль</a>
    <a href="./login.hbs" class="profile__link profile__link--exit">Выйти</a>  
</section>
