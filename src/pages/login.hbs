{{!< desktop}}

    <section class="login__section">
        <h2 class="login__title"> Вход </h2>
    <form action="/login" method="post">
        <label class="login__label">
            Имя пользователя
            <input class="login__input" type="text" name="login" placeholder="Введите имя"  required>
            <span class="login__error">Неверный пароль</span>
        </label>
        <label class="login__label">
                Пароль
        <input class="login__input" type="password" name="password"  placeholder="Введите пароль" required>
        </label>
        <input class="login__btn" type="submit" name="submit" value="Авторизоваться">
    </form>
    <a href="./registration.hbs" class="login__link">Нет аккаунта?</a>
    </section>
